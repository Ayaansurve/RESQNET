<?xml version="1.0" encoding="utf-8"?>
<!-- bg_active_badge.xml
     Orange pill/capsule badge background.
     Used on the "ACTIVE" label that appears on the Survivor role card
     when Survivor mode is selected.
     Color: International Orange (#FF4F00) at 15% opacity border,
     very dark tinted fill so text stays readable on black card. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#1AFF4F00" />

    <stroke
        android:width="1dp"
        android:color="#66FF4F00" />

    <corners android:radius="20dp" />

</shape>
<?xml version="1.0" encoding="utf-8"?>
<!--
    bg_radio_option.xml
    Selector background for the injury level RadioButtons in activity_survivor.xml.
    Checked state  → orange stroke + faint orange fill
    Default state  → dark fill with subtle border
    These act as toggle-style buttons (android:button="@null") rather than
    the default radio dot, which is too small for shaky/stressed hands.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- CHECKED / selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#1AFF4F00" />
            <stroke android:width="1.5dp" android:color="#FF4F00" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- PRESSED state (brief feedback on tap) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0DFF4F00" />
            <stroke android:width="1dp" android:color="#66FF4F00" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- DEFAULT / unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#111111" />
            <stroke android:width="1dp" android:color="#2A2A2A" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>